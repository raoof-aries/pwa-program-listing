<IfModule mod_rewrite.c>
  RewriteEngine On

  # Application is served from /attendance on this host
  RewriteBase /attendance/

  # Do not rewrite existing files or directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Redirect all other requests to the SPA entry point
  RewriteRule ^ index.html [L]
</IfModule>

